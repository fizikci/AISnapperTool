<Window x:Class="AiSnapper.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Response" Width="800" Height="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Copy" Width="100" Click="Copy_Click" Margin="0,0,8,0"/>
            <Button Content="Close" Width="100" Click="Close_Click"/>
        </StackPanel>
        <TextBox x:Name="OutputBox" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0"/>
    </Grid>
</Window>
