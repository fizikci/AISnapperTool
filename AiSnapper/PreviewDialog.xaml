<Window x:Class="AiSnapper.PreviewDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preview &amp; Prompt" Width="800" Height="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Preview your capture and describe what you want the AI to do."/>
        <ScrollViewer Grid.Row="1" Margin="0,8,0,0">
            <Image x:Name="PreviewImage" Stretch="Uniform"/>
        </ScrollViewer>
        <TextBox x:Name="PromptBox" Grid.Row="2" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,8,0,0"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Cancel" Width="100" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="Send" Width="120" IsDefault="True" Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Window>
