<Window x:Class="AiSnapper.SelectionOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True" AllowsTransparency="True"
        Background="#40000000" ShowInTaskbar="False" Opacity="1">
    <Canvas Name="CanvasRoot">
        <Rectangle x:Name="SelectionRect" Stroke="White" StrokeThickness="2" Fill="#20FFFFFF" Visibility="Collapsed"/>
        <TextBlock Text="Drag to select. Press ESC to cancel. Right-click for full screen."
                   Foreground="White" Margin="16" FontSize="16"/>
    </Canvas>
</Window>
