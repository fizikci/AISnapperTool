<Window x:Class="AiSnapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AiSnapper" Width="400" Height="220" ResizeMode="CanMinimize">
    <Grid Margin="16">
        <StackPanel>
            <TextBlock Text="AiSnapper is running in the tray." Margin="0,0,0,8"/>
            <TextBlock Text="Press Ctrl+Alt+I to capture a region or press 'Full Screen' for entire display."/>
            <StackPanel Orientation="Horizontal" Margin="0,16,0,0" HorizontalAlignment="Left" >
                <Button Width="120" Margin="0,0,8,0" Content="Full Screen" Click="FullScreen_Click"/>
                <Button Width="120" Content="Select Region" Click="Region_Click"/>
            </StackPanel>
            <TextBlock Margin="0,16,0,0" TextWrapping="Wrap">
                Configure your OpenAI key via environment variable OPENAI_API_KEY.
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
